{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>
    <a href="{{ path('post_new') }}" class="btn btn-success pull-right" style="margin-bottom: 10px">Create a new post</a>
    <div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content |raw }}</td>
                    <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                                <a class="btn btn-success btn-sm" href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                    </td>
                    <td>
                        <!-- Delete -->
                        {{ form_start(deleteForms[post.id]) }}
                            <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                        {{ form_end(deleteForms[post.id]) }}
                        <!-- End Delete -->
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
